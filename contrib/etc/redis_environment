#!/bin/bash
source cgroup-limits

export REDIS_MAXMEMORY=${REDIS_MAXMEMORY:-"$((MEMORY_LIMIT_IN_BYTES/1000000-32))M"}
export REDIS_DIR=${REDIS_DIR:-"/data"}
export REDIS_EXTRA_OPTIONS=${REDIS_EXTRA_OPTIONS:-""}

export OPTIONS=${OPTIONS:-" --dir $REDIS_DIR --maxmemory $REDIS_MAXMEMORY $REDIS_EXTRA_OPTIONS"}
